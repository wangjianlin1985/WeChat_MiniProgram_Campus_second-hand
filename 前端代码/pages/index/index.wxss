
.content{
  width: 100%;
  margin: 0 auto;
}
.slide{
  background-color: #ccc;
}
.slide   image{
  display: block;
   width: 100%;
  height: 180px;
}

.portals{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  background-color: #ccc;
  
}
.portals .navList{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  height: 150rpx;
  border-radius: 15rpx;
  background-color: white;
  margin-bottom: 10px;
}
.portals .navList .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  height: 150rpx;
  border: 1rpx solid #ccc;
   font-size: 30rpx;
 
  color: #666;
}
.portals .navList .item .ctrl{
  display: flex;
  flex-direction: column;
}
.portals .navList .item image{
  width: 50px;
  height: 50px;
}
.portals .title{
  width: 220rpx;
  height: 50rpx;
  border: 1px solid red;
  margin: 0px auto;
  text-align: center;
  font-size: 35rpx;
  color: red;
  border-radius: 10px;
}
 .portals .list{
   display: flex;
   flex-wrap: wrap;
   align-items: center;
   align-content: center;
    margin-top: 10px;
   border: 1rpx solid #666;
  
 }

.list .item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 350rpx;
  background-color:white;
  border-top: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
}
.list .item text{
  color: red;
}
.list .item .name{
  color: grey;
  font-size: 25rpx;
}
.list .item image{
  
  width: 250rpx;
  height: 250rpx;
 

}

.search {
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.search .input {
  width: 700rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}

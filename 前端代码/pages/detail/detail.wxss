
.slides{
  height: 300px;
}

.slides swiper-item {
   display:flex;                    
   justify-content: center;
      
}
.slides swiper-item image{
 width: 220px;
 
}

.product-detail{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: white;
  height: 100px;
  margin-top: 2px;
}
.product-detail .title{
  font-size: 35rpx;
  font-weight: bold;
}
.product-detail .title-detailed{
  font-size: 28rpx;
  color:black;
}
.product-detail .price{
  width: 700px;
  background-color: red;
  font-size: 45rpx;
  font-weight: bold;
  color: rgb(255, 255, 255);
}
.service-detaild{
  display:flex;
  font-size: 30rpx;
  background-color: #9999;
  border-radius: 2px;
  margin-top: 10px;
}

.service-detaild .title{
  margin-left:25px;
  flex: 1;
  color: red;
}
.service-detaild .desc{
  flex: 3;
}

.evaluation{
  display: flex;
  flex-direction: column;
  margin-top: 50px;
  
}
.evaluation .title{
  width: 220rpx;
  height: 50rpx;
  margin: 0px auto;
  text-align: center;
  font-size: 35rpx;
  color: red;
  border-radius: 10px;
}

.evaluation .area{
  display: flex;
  flex-direction: column;
  border:  1rpx solid #9999;
  border-radius: 5px;
  margin-bottom: 10px;
}
.evaluation image{
  width: 30px;
  height: 30px;
  border-radius: 25px;
  margin-right: 10px;
}
.evaluation .area .name{
     font-size: 12px;
     color: #666;
}
.evaluation .area .userinfo{
  display: flex;

 }

.evaluation .area text{
  padding-top: 7px;
  font-size: 30rpx;
   color:black;
  
}
.evaluation .area .eval{
  margin-left: 20px;
}

.evaluation .area .buydetail{
  display: flex;
  justify-content: space-around
}
.evaluation .area .product-name{
  font-size: 12px;
  color: #666;
}
 .evaluation .area .buydate{
   font-size: 12px;
   color: #666;
 }
.cart-buy{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  border: 1px solid lightgreen;
  background-color: white;
}
.cart-buy .cart{
  padding: 5px;
  font-size: 35rpx;
  color: red;
  background-color:orange;
  border: 1px solid red;
  border-radius: 5px;
  margin-right: 10px;
}

.cart-buy .buy{
   padding: 5px;
   font-size: 35rpx;
   color: rgb(255, 255, 255);
   background-color: red;
   border-radius: 5px;
   margin-right: 10px;
}
.father{
  height: 60px;
}

